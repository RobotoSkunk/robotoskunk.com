{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 21",
	"_version": "21.0.0",  

	"compilerOptions": {
		"outDir": "dist",
		
		"lib": [ "Es2023" ],
		"module": "Node16",
		"target": "ES2022",

		"moduleResolution": "Node16",

		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,

		"forceConsistentCasingInFileNames": true,

		"removeComments": true,
		"sourceMap": true
	},

	"include": [
		"src/**/*"
	]
}
